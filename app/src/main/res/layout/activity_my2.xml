<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        tools:context="apprtc.thekop.automobilecheckpoint4.MyActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/road3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c1"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/h1"
            android:textStyle="bold"
            android:textColor="@color/c1"
            android:layout_marginTop="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb1"
            android:id="@+id/btnMueg"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:textSize="@dimen/b2"
            android:textStyle="bold"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb7"
            android:id="@+id/btnPak"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/btnJom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="@dimen/b2"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"

            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb5"
            android:id="@+id/btnJom"
            android:layout_below="@+id/btnPho"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="@dimen/b2"
            android:background="#b4ffffff" />

        <Button
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb3"
            android:id="@+id/btnPho"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/btnMueg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="@dimen/b2"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb9"
            android:id="@+id/btnWad"
            android:layout_below="@+id/btnPak"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="@dimen/b2"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb2"
            android:id="@+id/btndum"
            android:layout_alignTop="@+id/btnMueg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textSize="@dimen/b2"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb4"
            android:id="@+id/btnBan"
            android:textStyle="bold"
            android:layout_above="@+id/btnJom"
            android:layout_alignLeft="@+id/btndum"
            android:layout_alignStart="@+id/btndum"
            android:textSize="@dimen/b2"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb6"
            android:id="@+id/btnSuan"
            android:textStyle="bold"
            android:layout_above="@+id/btnPak"
            android:layout_alignLeft="@+id/btnBan"
            android:layout_alignStart="@+id/btnBan"
            android:textSize="@dimen/b2"
            android:layout_marginTop="25dp"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb8"
            android:id="@+id/btnBang"
            android:textStyle="bold"
            android:textSize="@dimen/b2"
            android:layout_alignTop="@+id/btnWad"
            android:layout_alignLeft="@+id/btnking"
            android:layout_alignStart="@+id/btnking"
            android:background="#b4ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/button2"
            android:layout_height="@dimen/button1"
            android:text="@string/bb10"
            android:id="@+id/btnking"
            android:textStyle="bold"
            android:textSize="@dimen/b2"
            android:layout_alignTop="@+id/btnPak"
            android:layout_alignLeft="@+id/btnSuan"
            android:layout_alignStart="@+id/btnSuan"
            android:background="#b4ffffff" />

    </RelativeLayout>
</LinearLayout>